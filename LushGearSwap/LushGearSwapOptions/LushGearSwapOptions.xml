<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
	..\FrameXML\UI.xsd">

	<Script file="LushGearSwapOptions.lua"/>

	<Frame name="LushGear_OptionsFrame" enableMouse="true" movable="true" resizable="false" parent="PaperDollFrame" hidden="true">
		<Size>
			<AbsDimension x="380" y="300"/>
		</Size>
		
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPRIGHT"/>
		</Anchors>
		
		<Layers>
			<!-- Changed from "ARTWORK" to "BACKGROUND" to fix a bug mtadevic had on wow.curse.com-->
			<Layer level="BACKGROUND">
				<FontString name="$parentTitle" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentHelmTitle" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-33"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentCloakTitle" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-73"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentTitleTitle" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-113"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentMinimapHelpTitle" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="15" y="15"/>
							</Offset>
						</Anchor>
					</Anchors>				
				</FontString>
			</Layer>
		</Layers>

		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		
		<Frames>
			<Button name="$parentCloseButton">
				<Size x="32" y="32"/>
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
						<Offset x="-2" y="-5"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						LushGear_Options_Hide();
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
			</Button>
			
			<Button name="$parentResetNormal" inherits="OptionsButtonTemplate" text="Save">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-9" y="10"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						LushGear_Options_Save();
					</OnClick>
				</Scripts>
			</Button>
			
			<CheckButton name="$parentHelmShowOption" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="20" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_SHOWHELM_OPTION);
					</OnLoad>
					<OnClick>
						LushGear_Options_HelmOption_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentHelmHideOption" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="130" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_HIDEHELM_OPTION);
					</OnLoad>
					<OnClick>
						LushGear_Options_HelmOption_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			
			<CheckButton name="$parentHelmIgnoreOption" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="240" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_DONTCHANGE_OPTION);
					</OnLoad>
					<OnClick>
						LushGear_Options_HelmOption_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			
			<CheckButton name="$parentCloakShowOption" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="20" y="-85"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_SHOWCLOAK_OPTION);
					</OnLoad>
					<OnClick>
						LushGear_Options_CloakOption_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentCloakHideOption" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="130" y="-85"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_HIDECLOAK_OPTION);
					</OnLoad>
					<OnClick>
						LushGear_Options_CloakOption_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			
			<CheckButton name="$parentCloakIgnoreOption" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="240" y="-85"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_DONTCHANGE_OPTION);
					</OnLoad>
					<OnClick>
						LushGear_Options_CloakOption_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			
			<CheckButton name="$parentZoneSwap" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="20" y="-165"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(self:GetName().."Text"):SetText(LGS_NEWZONE_HEADER);
					</OnLoad>
					<OnClick>
						LushGear_Options_ZoneChange_OnClick(self);
					</OnClick>
				</Scripts>
			</CheckButton>
			
			<EditBox name="$parentZoneEditBox" letters="128" autoFocus="false" inherits="InputBoxTemplate">
				<Size>
					<AbsDimension x="250" y="20"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="0" y="35"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						LushGear_Options_ZoneChange_OnClick(self);
					</OnClick>
				</Scripts>
			</EditBox>
			
		</Frames>
		
		<Scripts> 
			<OnLoad> 
				LushGear_Options_OnLoad();
				getglobal(self:GetName().."HelmTitle"):SetText(LGS_HELMOPTION_HEADER);
				getglobal(self:GetName().."CloakTitle"):SetText(LGS_CLOAKOPTION_HEADER);
				getglobal(self:GetName().."TitleTitle"):SetText(LGS_SWAPONZONE_HEADER);
				getglobal(self:GetName().."MinimapHelpTitle"):SetText(LGS_MINIMAPHELP_HEADER);
			</OnLoad>
		</Scripts>

	</Frame>


</Ui>